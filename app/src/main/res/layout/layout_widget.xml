<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/widgetRootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/half_default_margin"
    android:background="@color/cardview_dark_background"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/storedRandomIdsTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        tools:text="The happiness of your life depends on the quality of your thoughts."/>

    <TextView
        android:id="@+id/authorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/default_margin"
        android:gravity="start"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="italic"
        tools:ignore="SmallSp"
        tools:text="- Marcus Aurelius"/>

</LinearLayout>